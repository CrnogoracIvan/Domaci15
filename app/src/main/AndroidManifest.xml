<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ivancrnogorac.domacizadatak15">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--> Prva i glavna aktivnost <-->
        <activity android:name=".Aktivnosti.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--> Druga aktivnost <-->
        <activity android:name = ".Aktivnosti.SecondActivity">
            android:name=".activities.SecondActivity"
            android:label="@string/second_activity_name"
            android:icon="@mipmap/ic_launcher">
        </activity>



        <!--> Treca aktivnost <-->
        <activity android:name = ".Aktivnosti.ThirdActivity">
            android:name=".activities.ThirdActivity"
            android:label="@string/third_activity_name"
            android:icon="@mipmap/ic_launcher">
        </activity>


    </application>

</manifest>